<h1>Listing Foods</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th><span class="sr-only">Actions</span></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= link_to food.name, food %></td>
        <td><%= food.description %></td>
        <td>
          <%= link_to 'Edit', edit_food_path(food) %> | 
          <%= link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New food', new_food_path, class: 'btn btn-primary' %>
