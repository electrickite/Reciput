<h1>Listing Foods</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th><span class="sr-only">Actions</span></th>
    </tr>
  </thead>

  <tbody>
    <% if @foods.each do |food| %>
      <tr>
        <td><%= link_to food.name, food %></td>
        <td><%= food.description %></td>
        <td><%= food_actions food %></td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="7">
          No foods have been added. <%= link_to('Add one?', new_food_path) if policy(Food).create? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New food', new_food_path, class: 'btn btn-primary') if policy(Food).create? %>
