<%- content_for(:title) { @food.name } -%>
<%- content_for(:opengraph_meta_tags) { render 'opengraph', object: @food } %>
<%- content_for(:actions) do %>
  <div class="pull-right">
    <%= render 'action_buttons', model: @food %>
  </div>
<%- end %>

<div class="row">
  <div class="col-md-12">
    <%- if @food.image.present? %>
      <%= image_tag @food.image.url(:medium), alt: '', class: 'pull-right' %>
    <%- end %>

    <%= simple_format @food.description %>
  </div>
</div>
