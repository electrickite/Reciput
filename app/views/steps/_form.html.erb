<%= simple_form_for [@step.recipe, @step], html: { class: 'resource-form' } do |f| %>
  <%= f.error_notification %>

  <%= f.input_field :recipe_id, as: :hidden %>
  <%= f.input :directions, :input_html => {:rows => 5} %>

  <%= f.button :submit %>
  <%= link_to 'Cancel', :back, class: 'btn btn-link' %>
<% end %>
