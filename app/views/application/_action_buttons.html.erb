<% path_chain = model if local_assigns[:path_chain].nil? %>
<div class="action-buttons btn-group btn-group-<%= local_assigns[:size] ? size : 'sm' %>" role="group">
  <%- if policy(model).edit? %>
    <%- if local_assigns[:handle] %>
      <button class="btn btn-default drag-handle">
        <span class="sr-only">Re-order</span>
        <span class="glyphicon glyphicon-resize-vertical" aria-hidden="true"></span>
      </button>
    <%- end %>
    <%= link_to edit_polymorphic_path(path_chain), class: 'btn btn-default', title: 'Edit' do %>
      <span class="sr-only">Edit</span>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%- end %>
  <%- end %>
  <%- if model.is_a? Recipe %>
    <%= link_to polymorphic_path(path_chain, format: :pdf), class: 'btn btn-default', title: 'Download' do %>
      <span class="sr-only">Download</span>
      <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
    <%- end %>
  <%- end %>
  <%- if policy(model).destroy? %>
    <%= link_to polymorphic_path(path_chain), method: :delete, title: 'Delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
      <span class="sr-only">Delete</span>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <%- end %>
  <%- end %>
</div>
