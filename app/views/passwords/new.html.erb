<h2><%= t(".title") %></h2>

<p><%= t(".description") %></p>

<%= form_for :password, url: passwords_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: 'form-control' %>
  </div>

  <%= form.submit 'Submit', class: 'btn btn-default' %>
<% end %>
