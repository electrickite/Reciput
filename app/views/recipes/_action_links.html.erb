<%- if policy(model).edit? %>
  <small class="action-links">
    <%= link_to 'Edit', polymorphic_path([model.recipe, model], action: :edit) %>
    <%- if policy(model).destroy? %>
      | <%= link_to 'Delete', polymorphic_path([model.recipe, model]), method: :delete, data: { confirm: 'Are you sure?' } %>
    <%- end %>
  </small>
<%- end %>
