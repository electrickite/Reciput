<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active time</th>
      <th>Total time</th>
      <th>Yield</th>
      <th>Equipment</th>
      <th><span class="sr-only">Actions</span></th>
    </tr>
  </thead>

  <tbody>
    <% if @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.description %></td>
        <td><%= format_time recipe.active_time %></td>
        <td><%= format_time recipe.total_time %></td>
        <td><%= recipe.yield %></td>
        <td><%= recipe.equipment %></td>
        <td><%= recipe_actions recipe %></td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="7">
          There are currently no recipes. <%= link_to('Create one?', new_recipe_path) if policy(Recipe).create? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
