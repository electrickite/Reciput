<%= simple_form_for @recipe, html: { class: 'resource-form' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%- if policy(@recipe).change_owner? %>
    <%= f.association :owner, input_html: { class: 'selectize-single' } %>
  <%- end %>
  <%= f.input :description, :input_html => {:rows => 5} %>
  <%= f.input :yield %>
  <%= f.input :active_time %>
  <%= f.input :total_time %>
  <%= f.input :equipment %>

  <%= render 'image_form_input', model: @recipe, form: f %>

  <%= f.association :users, label: 'Share with', input_html: { class: 'selectize-single' } %>

  <%= f.button :submit %>
  <%= link_to 'Cancel', :back, class: 'btn btn-link' %>
<% end %>
