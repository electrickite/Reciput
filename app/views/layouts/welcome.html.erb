<!DOCTYPE html>
<html>
<%= render 'head' %>

<body class="home">
  <%= render 'navbar' %>

  <div class="jumbotron">
    <div class="container">
      <div class="row">

        <div class="col-sm-4">
          <h1>Reciput</h1>
          <p>A place to put your recipes!</p>
        </div>

        <div class="col-sm-8">
          <%= search_form_for @q do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.label :name_or_description_cont, class: 'sr-only' %>
                <%= f.search_field :name_or_description_cont, class: 'form-control input-lg', placeholder: "Search recipes..." %>

                <span class="input-group-btn">
                  <%= f.button class: 'btn btn-lg btn-default' do %>
                    <span class="glyphicon glyphicon-search"></span><span class="sr-only">Go!</span>
                  <% end %>
                </span>
              </div>
            </div>

            <div class="form-group">
              <%= link_to 'Create new recipe', new_recipe_path, class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <%= render "flash_messages" %> 
    <%= yield %>
  </div>

</body>
</html>
